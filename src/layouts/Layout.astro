---
import '../styles/global.css';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
	description?: string;
}

const { title, description = "FJ Cueva - Escritor, Artista, Arquitecto" } = Astro.props;
const { currentLocale } = Astro;
---

<!doctype html>
<html lang={currentLocale} class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body class="bg-black text-white font-sans antialiased selection:bg-accent selection:text-black">
        <Navbar />
		<slot />
        <Footer />
	</body>
</html>